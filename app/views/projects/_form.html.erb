<div class="row">
  <div class="col-md-4">
    <%= form_for @project do |f| %>
      <div class="form-group">
        <%= f.label 'Name' %>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label 'Description' %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
      	<%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
