<h1>Projects</h1>

<% if policy(Project).new? %>
  <%= button_to "New", new_project_path,
    method: :get, id:'new_project', class: 'btn btn-primary'%>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Description
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= render @projects%>
  </tbody>
</table>

<%= paginate @projects, :theme => 'twitter-bootstrap-3' %>
