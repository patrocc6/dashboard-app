<tr>
  <td class="col-md-3">
    <%= task.name %>
  </td>
  <td class="col-md-2">
    <%= format_value(task.start_date) %>
  </td>
  <td class="col-md-2">
    <%= format_value(task.end_date) %>
  </td>
  <td class="col-md-2">
    <%= format_value(task.due_date) %>
  </td>
  <td class="col-md-2">
    <%= status_tag(task.status) %>
  </td>
  <td class="col-md-1">
    <span class="glyphicon glyphicon-pencil"></span>
  </td>
</tr>
